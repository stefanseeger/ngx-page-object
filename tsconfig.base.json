{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ts-page-objects/core": ["packages/core/src/index.ts"],
      "@ts-page-objects/ngx-page-object": [
        "packages/ngx-page-object/src/index.ts"
      ],
      "@ts-page-objects/ts-page-object": [
        "packages/ts-page-object/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
